<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SeoDash Free Bootstrap Admin Template by Adminmart</title>
    <link rel="shortcut icon" type="image/png" href="../assets/images/logos/seodashlogo.png" />
    <link rel="stylesheet" href="../../node_modules/simplebar/dist/simplebar.min.css">
    <link rel="stylesheet" href="../assets/css/styles.min.css" />
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
        data-sidebar-position="fixed" data-header-position="fixed">
        <!-- Sidebar Start -->
        <%-include("aside")%>
            <!--  Sidebar End -->
            <!--  Main wrapper -->
            <div class="body-wrapper">
                <!--  Header Start -->
                <%-include("header")%>
                    <!--  Header End -->
                    <div class="container-fluid">
                        <div class="table-responsive mb-5 rounded-3 shadow-sm">
                          <%if(locals.flash.success.length > 0){%>
                            <div class="alert alert-primary" role="alert">
                                <%=locals.flash.success%>
                            </div>
                            <%}%>
                            <table class="table table-hover table-striped align-middle mb-0 bg-white">
                              <thead class="table-light text-uppercase text-secondary small">
                                <tr>
                                  <th scope="col" class="text-center">No</th>
                                  <th scope="col" class="text-center">Name</th>
                                  <th scope="col" class="text-center">Email</th>
                                  <th scope="col" class="text-center">Image</th>
                                  <th scope="col" colspan="2" class="text-center">Actions</th>
                                </tr>
                              </thead>
                              <tbody>
                                <%data.map((e,i)=>{%>
                                    <tr>
                                        <td class="fw-semibold text-center text-dark"><%=i+1%></td>
                                        <td class="fw-semibold text-center text-dark"><%=e.fullname%></td>
                                        <td class="text-center"><%=e.email%></td>
                                        <td class="text-center"><img width="100px" src="<%=e.profile%>" alt=""></td>
                                        <td class="text-end">
                                          <a href="/editRecord?id=<%=e.id%>"><button class="btn btn-sm btn-outline-primary">Edit</button></a>
                                        </td>
                                        <td class="text-end">
                                            <a href="/deleteRecord?id=<%=e.id%>"><button class="btn btn-sm btn-outline-danger">Delete</button></a>
                                          </td>
                                      </tr>
                                <%})%>
                              </tbody>
                            </table>
                          </div>                          
                        <div class="py-6 px-6 text-center">
                            <p class="mb-0 fs-4">Design and Developed by <a href="https://adminmart.com/"
                                    target="_blank"
                                    class="pe-1 text-primary text-decoration-underline">AdminMart.com</a> Distributed by
                                <a href="https://themewagon.com/" target="_blank"
                                    class="pe-1 text-primary text-decoration-underline">ThemeWagon</a></p>
                        </div>
                    </div>
            </div>
    </div>
    <script src="../assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../assets/libs/simplebar/dist/simplebar.js"></script>
    <script src="../assets/js/sidebarmenu.js"></script>
    <script src="../assets/js/app.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>

</html>